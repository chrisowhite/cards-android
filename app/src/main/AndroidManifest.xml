<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cards.cah" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:name=".CardsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CAH" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameHomeActivity"
            android:label="@string/title_activity_game_home"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CardSelectActivity"
            android:label="@string/title_activity_card_select"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.GameHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.GameHomeActivity" />
        </activity>
        <activity
            android:name=".activities.SelectedAnswerActivity"
            android:label="@string/title_activity_selected_answer"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.GameHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.GameHomeActivity" />
        </activity>
    </application>

</manifest>
