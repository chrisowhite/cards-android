<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selected_answer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/nav_toolbar" />

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/black_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="@android:color/black">

                <TextView
                    android:id="@+id/question_card_text"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/card_padding"
                    android:paddingBottom="@dimen/card_padding"
                    android:paddingLeft="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:text="Anthropologists have recently discovered a primitive tribe that worships __________."
                    android:textSize="@dimen/card_text_size"
                    android:textColor="@android:color/white"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/selected_white_cards"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <ImageButton
            android:layout_width="@dimen/round_button_diameter"
            android:layout_height="@dimen/round_button_diameter"
            android:id="@+id/button3"
            android:layout_gravity="start|bottom"
            android:src="@drawable/collections_view_as_list"
            android:layout_marginBottom="@dimen/add_button_margin"
            android:layout_marginStart="@dimen/add_button_margin"
            android:layout_marginLeft="@dimen/add_button_margin"
            android:tint="@android:color/white"
            android:elevation="@dimen/elevation_low"
            android:background="@drawable/circle_button"
            android:onClick="onShowWhiteCardListClick"/>
    </FrameLayout>

    <include layout="@layout/nav_drawer" />
</android.support.v4.widget.DrawerLayout>
