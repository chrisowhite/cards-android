<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_select_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/black_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="@android:color/black">

            <TextView
                android:id="@+id/question_card_text"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/card_padding_top_bottom"
                android:paddingBottom="@dimen/card_padding_top_bottom"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:text="Sample question card text..."
                android:textSize="@dimen/question_preview_text_size"
                android:textColor="@android:color/white"/>
        </android.support.v7.widget.CardView>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <fragment android:id="@+id/nav_drawer_fragment"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.cards.cah.NavDrawerFragment"/>
</android.support.v4.widget.DrawerLayout>
